.sections {
    overflow: hidden;
}

.section {
    margin: 8px 0;
    background: #fff;
    border-bottom: 1px solid #ebebeb;
}

.timebar {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 30px;
    background: #fffac4;
    color: #333;
    font-size: 14px;
}

.timebar__icon {
    margin-right: 5px;
}

.detail {
    border-top: 1px solid #ebebeb;
    font-size: 14px;
    padding: 5px 15px;
}

.detail__row {
    height: 30px;
    display: flex;
    align-items: center;
}

.detail__label {
    color: #666;
    width: 100px;
}

.detail__value {
    flex: 1;
    color: #333;
}

.detail__value--orange {
    color: #ff6900;
}

.payway {
    padding: 10px 15px;
    height: 70px;
    background: #fff;
    display: flex;
    align-items: center;
    font-size: 14px;
    position: relative;
}

.payway--border::after {
    position: absolute;
    content: '';
    left: 15px;
    bottom: 0;
    right: 0;
    border-bottom: 1px solid #ebebeb;
}

.payway__icon {
    width: 50px;
    height: 50px;
    margin-right: 8px;
}

.payway__info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.payway__arrowbox {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
}

.payway__arrow {
    width: 7px;
    height: 13px;
    margin-left: 5px;
}

.payway__title {
    display: flex;
    align-items: baseline;
    margin-bottom: 8px;
}

.payway__detail {
    color: #666;
    font-size: 12px;
}

.payway__value {
    color: #ff6d00;
    font-size: 12px;
    margin-left: 8px;
}