.header{
	 height:162px;
	 position:relative;
}
.userInfo{
	 position:absolute;
	 top:0;
	 left: 0;
	 width: 100%;
	 height: 100%;
	 display:flex;
	 padding: 0 40px;
	 align-items: center;
   /*justify-content: space-between;*/
	 
}

.userInfo__vipdegree{
	font-size:12px;
	color:#ffffff; 
  flex-direction: column;
  height:72px;
   justify-content: center;
   align-items:center;
    display:flex;
	width: 25%;
}
.userInfo__vipdegreeIcon{
	 height:18px;
	 background:#ffc600;
	 border-radius:10px;
	 color:#ffffff;
   display:flex;
    align-items:center;
     justify-content: center;
     padding:0 10px;
 	white-space: nowrap;

}
.userInfo__vipdegreeText{
	line-height:24px;
   align-items:center;
   justify-content: center;
   display:flex;
	white-space: nowrap;
}
.userInfo__detail{
	width: 50%;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 0 10px;
}
.userInfo__headimg{
  border:3px solid #ffad33;
  border-radius:50%;
  position:relative;
  width:66px;
  height:66px;
	overflow:hidden;

}
.userInfo__headimgIcon{
   position:absolute;
   top:0;
   left:0;
   border-radius:50%;
}

.userInfo__detailNickname{
	 font-size:15px;
	 color:#ffffff;
     line-height: 1.3;
	margin-top: 8px;
}
.order{
	 margin-bottom:8px; 
	 background:#ffffff;
}
.order__my{
	 width:auto;
	 height:51px;
	 margin-left:15px;
	 padding-right:15px;
	 border-bottom:1px solid #e5e5e5;
	 display:flex;
    align-items: center;
    justify-content: space-between;
}

.order__myText{
	 font-size:16px;
	 color:#000000;
	 display:flex;
    align-items: center;
}
.order__myIcon{
	width:15px;
	height:18px;
	margin-right:5px;
}
.order__myAllOrder{
	 font-size:13px;
	 color:#808080;
	 display: flex;
    align-items: center;
}
.order__arrow {
    width: 7px;
    height: 13px;
    margin-left: 6px;
}
.orderstep{
	 height:82px;
	 border-bottom:1px solid #e5e5e5;
   	align-items: center;
   justify-content:center;
   display:flex;
}
.order__step{
	width:25%;
    height:58px;
	align-items: center;
   justify-content:center;
   position:relative;

}
.order__stepicon{
  height:29px;
  display:flex;
  align-items: center;
  justify-content:center;

}
.order__steppayment{
	 width:24px;
	 height:21px;
    align-items: center;
   justify-content:center;
   position:relative;
}
.order__stepName{
	 width:100%;
	 color:#333333;
	 font-size:13px;
	 display:flex;
   height:29px;
   align-items: center;
  justify-content:center;
}
.purse{
	 background:#ffffff;
     margin-top:10px;
}

.purse__catagory{
	height:82px;
	border-bottom:1px solid #e5e5e5;
	display:flex;
   align-items:center;
   justify-content:center;
}
.purse__catagorylei{
	width:33.3%;
  align-items: center;
   justify-content:center;
}
.purse__catagoryNumber{
    width:100%;
	 color:#ff6900;
	 font-size:15px;
   line-height:1.8;
   display:flex;
	 align-items: center;
    justify-content:center;
}
.purse__catagoryName{
    width:100%;
     font-size:13px;
     color:#333333;
      line-height:1.8;
      display:flex;
      align-items: center;
  justify-content:center;
}

