.info {
    padding: 8px 0;
}

.info__box {
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
    padding: 10px 15px;
    display: flex;
}

.info__imgbox {
    position: relative;
    width: 80px;
    height: 80px;
    /*border: 1px solid #e5e5e5;*/
}

.info__num {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: rgba(0, 0, 0, .5);
    height: 20px;
    display: flex;
    color: #fff;
    align-items: center;
    justify-content: center;
    font-size: 12px;
}

.info__detail {
    flex: 1;
    padding-left: 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.info__row {
    display: flex;
    font-size: 14px;
}

.info__label {
    width: 80px;
}

.info__value--orange {
    color: #ff6900;
}

.list {
    background: #fff;
}

.list__title {
    font-size: 15px;
    color: #333;
    padding: 0 15px;
    height: 40px;
    display: flex;
    align-items: center;
}

.list__items {
    border-top: 1px solid #e5e5e5;
    padding: 12px 0;
    overflow: hidden;
}

.list__item {
    display: flex;
}

.list__text {
    color: #959ca7;
    font-size: 14px;
    margin-bottom: 8px;
    line-height: 1.3;
}

.list__text--orange {
    color: #ff6900;
}

.list__time {
    color: #959ca7;
    font-size: 12px;
    margin-bottom: 24px;
}

.list__linebox {
    position: relative;
    width: 42px;
}

.list__line {
    position: absolute;
    left: 50%;
    width: 2px;
    background: #ddd;
    height: 105%;
    top: 0;
}

.list__dot {
    position: absolute;
    top: 5px;
    left: 50%;
    margin-left: -3px;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ddd;
}

.list__cart {
    position: absolute;
    top: 3px;
    left: 50%;
    margin-left: -8px;
    width: 16px;
    height: 14px;
}

.list__right {
    position: absolute;
    top: 0;
    left: 50%;
    margin-left: -9px;
    width: 18px;
    height: 18px;
}

.list__info {
    flex: 1;
}