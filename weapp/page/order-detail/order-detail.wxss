.footerHeight {
    height: 50px;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    border-top: 1px solid #e5e5e5;
    background: #fff;
    padding: 0 15px;
    z-index: 100;
}

.footer__btn {
    width: 80px;
    height: 34px;
    font-size: 14px;
    white-space: nowrap;
    margin-left: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 3px;
}

.footer__btn--orange {
    background: #ff6900;
    color: #fff;
}

.footer__btn--gray {
    color: #666;
    background: #fff;
    border: 1px solid #ccc;
}

.header,
.address,
.goods,
.payType,
.detail,
.time {
    margin-bottom: 8px;
}

.header {
    position: relative;
    height: 94px;
}

.header__title,
.header__content {
    position: absolute;
    left: 16px;
    right: 16px;
    color: #fff;
}

.header__title {
    top: 19px;
    font-size: 18px;
}

.header__content {
    top: 47px;
    font-size: 14px;
    line-height: 1.3;
}

.address {
    background: #fff;
}

.address__content {
    display: flex;
    align-items: center;
    min-height: 67px;
}

.address__iconbox {
    width: 40px;
    display: flex;
    justify-content: center;
}

.address__detail {
    flex: 1;
    padding: 10px 15px 10px 0;
}

.address__name {
    color: #333;
    font-size: 15px;
    margin-bottom: 8px;
}

.address__addr {
    color: #666;
    font-size: 14px;
    line-height: 1.3;
}

.address__icon {
    width: 13px;
    height: 16px;
}

.address__line {
    height: 2px;
}

.payType {
    padding: 0 15px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 45px;
    background: #fff;
    font-size: 15px;
    border-bottom: 1px solid #e5e5e5;
}

.time {
    padding: 5px 15px;
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
}

.time__row {
    display: flex;
    align-items: center;
    font-size: 14px;
    height: 30px;
    color: #999;
}

.detail {
    padding: 0 15px;
    font-size: 15px;
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
}

.detail__row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 43px;
    border-bottom: 1px solid #e5e5e5;
}

.detail__row--sm {
    font-size: 13px;
    border-bottom: 0;
    height: 36px;
}

.detail__row--last {
    border-bottom: 0;
}

.detail__row--border {
    border-bottom: 1px solid #e5e5e5;
}

.detail__value--orange {
    color: #ff6900;
    font-size: 15px;
}

.detail__zibox {
    display: flex;
    align-items: center;
}

.detail__zi {
    color: #fff;
    padding: 2px;
    border-radius: 2px;
    margin-right: 5px;
}

.detail__zi--di {
    background: #509fe7;
}

.detail__zi--jian {
    background: #ff6900;
}

.goods__header {
    background: #fff;
    border-bottom: 1px solid #ddd;
    padding: 0 15px;
    display: flex;
    align-items: center;
    font-size: 15px;
    height: 40px;
}

.goods__merchant {
    width: 17px;
    height: 17px;
    margin-right: 8px;
}

.goods__list {
    background: #fff;
    padding-left: 15px;
}

.goods__item {
    height: 80px;
    padding: 10px 15px 10px 0;
    display: flex;
    border-bottom: 1px solid #ddd;
}

.goods__img {
    width: 60px;
    height: 60px;
    margin-right: 8px;
}

.goods__detail {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 3px 0;
}

.goods__name {
    color: #333;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    -webkit-line-clamp: 2;
    vertical-align:middle;
    line-height:1.3
}

.goods__info {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.goods__price {
    color: #ff6d00;
}

.goods__num {
    color: #808080;
}

.goods__footer {
    padding: 15px;
    display: flex;
    justify-content: space-between;
    background: #fff;
    font-size: 14px;
    color: #333;
}

.goods__footValue {
    margin-bottom: 5px;
    text-align: right;
}

.goods__footValue--last {
    margin-bottom: 0;
}