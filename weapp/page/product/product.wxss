.section{
	 padding-top:45px;
   padding-bottom:60px;
}
.ui-tab{
	position: fixed;
    display: block;
    top: 0;
    left: 0;
    z-index: 105;
    font-size: 18px;
    height:45px;
    background:#ffffff;
    width:100%;
    overflow:hidden;

    
}
.ui-tab-nav{
    display:flex; 
    align-items: center;
    justify-content: center;
    position:relative;

}
.ui-tab__con{
	 flex:1;
	 display:flex;
    align-items: center;
    justify-content: center;
}
.nav{
    width: 50px;
    margin: 0 20px;
    height: 45px;
    display:flex;
    align-items: center;
    justify-content: center;
    font-size:16px;
    position: relative;
}
.nav__border {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
	 border-bottom:3px solid #ff6d00;
}
.product{
	 padding:10px 15px;
     background:#ffffff;
}
.product__name{
	font-size:16px;
	color:#333333;
	text-overflow: ellipsis;
     display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    -webkit-line-clamp: 2;
    vertical-align:middle;
    line-height:1.3;
}
.product__title{
	 color:#ff4444;
	 font-size:13px;
    line-height:1.3;
    margin:8px 0;
}
.product__price{
	color:#fe6a00;
	font-size:18px;
}
.product__saleamount{
	 display:flex;
    padding:8px 0;
    justify-content: space-between;
}
.product__salesVolume{
	 font-size:12px;
	 color:#999999;
}
.desc {
    width: 100%;
}


.footer {
    width:100%;
    height:50px;
    position:fixed;
    bottom:0;
    left:0; 
    z-index:106;
    background:#ffffff;
}
.footer__nav{

     height:50px;
    background:#ffffff;
     display:flex;
}
.footer__goshopcart{
    width:65px;
}

.footer__goshopcartlink {
    display:flex;
    flex-direction: column;
    align-items: center;
    padding-top: 8px;
}

.footer__icon{
     width:22px;
     height:19px;
     position:relative;
    margin-bottom: 5px;
}
.footer__text{
     color:#333;
     font-size:12px;
}
.footer__addshopcart{
    flex:1;
    display:flex;
    font-size:18px;
    background:#ff6900;
    align-items: center;
    justify-content: center;
    color:#fff;
}