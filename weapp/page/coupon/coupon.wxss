.coupon{
  margin-top:15px;    
}
.form{
   

}
.section{
     background:#ffffff;

}
.quannumberbox{
  height:44px;  
  display:flex; 
  border-top:1px solid #e7e7e7;  
  margin-left:15px;
}
.bt{
  border-bottom:1px solid #e7e7e7;  
}
.quanlabel{
    font-size:17px;
    color:#000000;  
    width:90px; 
}
.quannumber{
    flex:1;
    height:44px;
}
.quanlabel,
.quannumber {
  display:flex;
  align-items: center;
}

.addbtn{
    margin:30px auto;
}
.add__btn{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}


.switchtab{
     display:flex;
     height:40px;
     background:#fff;
}
.tab{
     width:25%;
     height:40px;
     display:flex;
     align-items: center;
     justify-content: center;
    
}
.nouse,.used,.donated,.expired{
     position:relative;
     height:40px;
     display:flex;
    align-items: center;
    justify-content: center;
    width:64px;

}
.nav__border {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    border-bottom:3px solid #ff6d00;
}
.nouse__coupon{
     width:100%;
     height:120px;
     padding-bottom:20px;
}
.coupon__item{
     margin:15px;
     min-height:100px;
     background:#ffffff;
     position:relative;
     display:flex;
}
.gray{
    filter: grayscale(100%) brightness(100%) contrast(110%);
}
.coupon__bg{
     width:100%;
     height:5px;
     position:absolute;
     top:0;
     left:0px;
}
.coupon__btn{
    padding:2px 5px;
    background:#ff6900;
    color:#fff;
    font-size:12px;
    text-align:center;
    border-top-left-radius:5px;
    border-top-right-radius:5px;
    border-bottom-right-radius:5px;
    position:absolute;
    top:0;
    left:0;
    display:inline-block;

}
.coupon__info{
     width:100%;
     display:flex;
     align-items: center;
     justify-content: center;
}
.coupon__value{
    width:90px;
    height:44px;
    display:flex;
    align-items: center;
    justify-content: center;
    border-right:1px solid #b2b2b2;
    color:#ff6900;
}
.coupon__price{
    font-size:36px;
    color:#ff6900;
    display:flex;
    align-items: center;
}
.coupon__detail{
    display:flex;
    // flex:1;
    width:64%;
    justify-content: center;
    flex-direction: column;
    padding:0 15px;
}
.coupon__name{
    max-width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size:15px;
    color:#333333;
    text-align:left;
    padding:5px 0;
}
.coupon__expired{
     color:#b2b2b2;
     font-size:12px;
     text-align:left;
}
.coupon__nodata{
     margin:30px auto;
     text-align:center;
}
.coupon__useful{
    font-size:10px;
    color:#666;
    position:absolute;
    bottom:0;
    left:0;
    display:block;
    max-width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding:10px 0;
    margin-left:10px;
   
}
