.form {
    position: fixed;
    z-index: 200;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: #f4f4f4;
}

.form__box {
    margin: 8px 0 25px;
    background: #fff;
}

.form__group {
    padding: 0 15px;
    height: 45px;
    border-bottom: 1px solid #e5e5e5;
    position: relative;
}

.form__input {
    display: flex;
    align-items: center;
    font-size: 14px;
    color: #333;
    width: 100%;
    height: 44px;
}

.form__input--placeholder {
    color: #999;
}

.form__arrow {
    position: absolute;
    right: 15px;
    width: 12px;
    height: 13px;
    top: 0;
    bottom: 0;
    top: 50%;
    transform: translateY(-50%);
}

.form__tip {
    color: #b2b2b2;
    font-size: 12px;
    margin-left: 8px;
}

.form__switchbox {
    position: absolute;
    right: 15px;
    top: 0;
    bottom: 0;
    display: flex;
    align-items: center;
}
