.Circle {
    position: absolute;
    right: 0;
    top: 0;
    width: 15px;
    height: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    border-radius: 50%;
    line-height: 1;
}
.Circle--solid {
    color: #fff;
    background: #ff6900;
}

.Circle--hollow {
    border: 1px solid #ff6900;
    color: #ff6900;
    background: #fff;
}