page,
view,
scroll-view,
image,
navigator,
swiper,
swiper-item,
textarea,
input,
picker-view,
picker-view-column {
    box-sizing: border-box;
}

page {
    font-size: 16px;
    min-height: 100%;
    word-break: break-all;
    word-wrap: break-word;
    line-height: 1;
    background: #f4f4f4;
}

navigator,
image {
    width: 100%;
    height: 100%;
    display: block;
}

.app__button--orange {
    margin: 0 15px;
    background: #ff6900;
    color: #fff;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 5px;
    border: 0;
    font-size: 18px;
    line-height: 1;
    padding: 0;
    position: relative;
}